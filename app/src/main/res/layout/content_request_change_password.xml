<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/coords"
    android:background="@color/l_gray_bg"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.medicard.member.RequestChangePassword"
    tools:showIn="@layout/activity_request_change_password">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_main"
                    android:text="REQUEST A NEW PASSWORD"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:textColor="@color/colorPrimary"
                    android:layout_margin="@dimen/margin"/>


                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Email Address"
                    android:layout_margin="@dimen/sub_margin"
                    android:id="@+id/et_emailAdd"
                    android:textSize="@dimen/text_small"
                    android:focusable="true"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/sub_margin"
                    android:hint="Member Code"
                    android:id="@+id/et_member_code"
                    android:textSize="@dimen/text_small"/>

                <Button
                    android:id="@+id/btn_sendNewPassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/sub_margin"
                    android:layout_marginRight="@dimen/sub_margin"
                    android:layout_marginBottom="@dimen/margin"
                    android:background="@color/colorPrimaryLight"
                    android:text="SUBMIT"
                    android:textColor="@android:color/white"/>


            </LinearLayout>


        </android.support.v7.widget.CardView>


    </LinearLayout>

</android.support.design.widget.CoordinatorLayout>
