<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fancy="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="@android:color/white"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="vertical"
            android:paddingBottom="80dp">


            <ImageView
                android:layout_width="@dimen/imageCircle_width"
                android:layout_height="@dimen/imageCircle_height"
                android:layout_gravity="center"
                android:layout_margin="@dimen/sub_margin"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_logo_verticals" />

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/sample"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/nav_text_size"
                android:textStyle="bold"
                android:visibility="gone" />



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                //division for user information

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="@dimen/margin"
                    android:background="@color/grey" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="@dimen/nav_padding">

                        <ImageView
                            android:id="@+id/imageView"
                            android:layout_width="@dimen/nav_icon_size"
                            android:layout_height="@dimen/nav_icon_size"
                            android:tint="@color/colorAccent"
                            app:srcCompat="@drawable/account_w" />

                        <TextView
                            android:id="@+id/tv_memberInfo"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="@dimen/sub_margin"
                            android:gravity="center_vertical"
                            android:text="@string/nav_myAccount"
                            android:textColor="@color/BLACK"
                            android:textSize="@dimen/nav_text_small"
                            android:textStyle="bold" />

                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="@dimen/nav_padding">

                        <ImageView
                            android:layout_width="@dimen/nav_icon_size"
                            android:layout_height="@dimen/nav_icon_size"
                            android:tint="@color/colorAccent"
                            app:srcCompat="@drawable/ic_request" />


                        <TextView
                            android:id="@+id/tv_loa_req"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="@dimen/sub_margin"
                            android:gravity="center_vertical"
                            android:text="@string/nav_my_loa_request"
                            android:textColor="@color/BLACK"
                            android:textSize="@dimen/nav_text_small"
                            android:textStyle="bold" />


                    </LinearLayout>

                </LinearLayout>


                //division for listing
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/grey" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="@dimen/nav_padding">

                        <ImageView

                            android:layout_width="@dimen/nav_icon_size"
                            android:layout_height="@dimen/nav_icon_size"
                            android:tint="@color/colorAccent"
                            app:srcCompat="@drawable/ic_tooth" />

                        <TextView
                            android:id="@+id/nav_dentist"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="@dimen/sub_margin"
                            android:gravity="center_vertical"
                            android:text="@string/nav_dentist"
                            android:textColor="@color/BLACK"
                            android:textSize="@dimen/nav_text_small"
                            android:textStyle="bold" />
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="@dimen/nav_padding">

                        <ImageView

                            android:layout_width="@dimen/nav_icon_size"
                            android:layout_height="@dimen/nav_icon_size"
                            android:tint="@color/colorAccent"
                            app:srcCompat="@drawable/ic_doctor" />

                        <TextView
                            android:id="@+id/nav_doctor"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="@dimen/sub_margin"
                            android:gravity="center_vertical"
                            android:text="@string/nav_doctor"
                            android:textColor="@color/BLACK"
                            android:textSize="@dimen/nav_text_small"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="@dimen/nav_padding">

                        <ImageView
                            android:layout_width="@dimen/nav_icon_size"
                            android:layout_height="@dimen/nav_icon_size"
                            android:tint="@color/colorAccent"
                            app:srcCompat="@drawable/ic_hospital" />

                        <TextView
                            android:id="@+id/nav_hospital"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="@dimen/sub_margin"
                            android:gravity="center_vertical"
                            android:text="@string/nav_hospital"
                            android:textColor="@color/BLACK"
                            android:textSize="@dimen/nav_text_small"
                            android:textStyle="bold" />
                    </LinearLayout>


                </LinearLayout>


                //division for others
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/grey" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="@dimen/nav_padding">

                        <ImageView
                            android:layout_width="@dimen/nav_icon_size"
                            android:layout_height="@dimen/nav_icon_size"
                            android:tint="@color/colorAccent"
                            app:srcCompat="@drawable/ic_faq" />

                        <TextView
                            android:id="@+id/nav_faqs"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="@dimen/sub_margin"
                            android:gravity="center_vertical"
                            android:text="@string/nav_faqs"
                            android:textColor="@color/BLACK"
                            android:textSize="@dimen/nav_text_small"
                            android:textStyle="bold" />
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="@dimen/nav_padding">

                        <ImageView
                            android:layout_width="@dimen/nav_icon_size"
                            android:layout_height="@dimen/nav_icon_size"
                            android:tint="@color/colorAccent"
                            app:srcCompat="@drawable/ic_settings" />


                        <TextView
                            android:id="@+id/tv_account_settings"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="@dimen/sub_margin"
                            android:gravity="center_vertical"
                            android:text="@string/nav_account_setting"
                            android:textColor="@color/BLACK"
                            android:textSize="@dimen/nav_text_small"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="@dimen/nav_padding">

                        <ImageView
                            android:layout_width="@dimen/nav_icon_size"
                            android:layout_height="@dimen/nav_icon_size"
                            android:tint="@color/colorAccent"
                            app:srcCompat="@drawable/ic_logout" />

                        <TextView
                            android:id="@+id/btn_logOut"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="@dimen/sub_margin"
                            android:gravity="center_vertical"
                            android:text="@string/action_settings"
                            android:textColor="@color/BLACK"
                            android:textSize="@dimen/nav_text_small"
                            android:textStyle="bold" />

                    </LinearLayout>
                </LinearLayout>


            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</RelativeLayout>
