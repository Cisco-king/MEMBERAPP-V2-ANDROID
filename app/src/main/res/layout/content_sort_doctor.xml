<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fancy="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_sort"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/l_gray_bg"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="v2.SortHospitalActivity"
    tools:showIn="@layout/activity_sort_doctor">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="50dp">


            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/sub_margin">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/sub_margin"
                    android:orientation="vertical">

                    <EditText
                        android:id="@+id/et_search"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/edit_text_rounded_corner"
                        android:hint="Search"
                        android:padding="@dimen/sub_margin"
                        android:textColor="@color/BLACK"
                        android:textSize="@dimen/text_main" />


                </LinearLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/sub_margin">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/sub_margin"
                    android:orientation="vertical">


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/sub_margin"
                        android:text="@string/sort_by"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/text_main" />

                    <TextView
                        android:id="@+id/tv_sort_by"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/edit_text_rounded_corner"
                        android:padding="@dimen/sub_margin"

                        android:textColor="@color/BLACK"
                        android:textSize="@dimen/text_main" />


                </LinearLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/sub_margin">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/sub_margin"
                    android:orientation="vertical">


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/sub_margin"
                        android:text="@string/specialization"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/text_main" />

                    <TextView
                        android:id="@+id/tv_specialization"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/edit_text_rounded_corner"
                        android:padding="@dimen/sub_margin"
                        android:text="All Specializations"
                        android:textColor="@color/BLACK"
                        android:textSize="@dimen/text_main" />


                </LinearLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/sub_margin">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/sub_margin"
                    android:orientation="vertical">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/sub_margin"
                        android:layout_marginRight="@dimen/sub_margin"
                        android:text="@string/room"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/text_main" />

                    <EditText

                        android:id="@+id/et_room_number"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/edit_text_rounded_corner"
                        android:hint="Enter Room"
                        android:padding="@dimen/sub_margin"
                        android:textColor="@color/BLACK"

                        android:textSize="@dimen/text_main" />


                </LinearLayout>

            </android.support.v7.widget.CardView>


            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/sub_margin"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/sub_margin"
                    android:orientation="vertical">


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/sub_margin"
                        android:text="@string/sort_by"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/text_main" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">


                            <CheckBox

                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Monday"
                                android:textColor="@color/colorPrimary" />

                            <CheckBox
                                android:layout_width="match_parent"

                                android:layout_height="wrap_content"
                                android:text="Tuesday"
                                android:textColor="@color/colorPrimary" />

                            <CheckBox
                                android:layout_width="match_parent"

                                android:layout_height="wrap_content"
                                android:text="Wednesday"
                                android:textColor="@color/colorPrimary" />

                            <CheckBox
                                android:layout_width="match_parent"

                                android:layout_height="wrap_content"
                                android:text="Thursday"
                                android:textColor="@color/colorPrimary" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">


                            <CheckBox
                                android:layout_width="match_parent"

                                android:layout_height="wrap_content"
                                android:text="Friday"
                                android:textColor="@color/colorPrimary" />

                            <CheckBox
                                android:layout_width="match_parent"

                                android:layout_height="wrap_content"
                                android:text="Saturday"
                                android:textColor="@color/colorPrimary" />

                            <CheckBox
                                android:layout_width="match_parent"

                                android:layout_height="wrap_content"
                                android:text="Sunday"
                                android:textColor="@color/colorPrimary" />

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </android.support.v7.widget.CardView>


            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/sub_margin"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/sub_margin"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/sub_margin"
                        android:text="@string/time"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/text_main" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">


                        <TextView
                            android:id="@+id/tv_left"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignLeft="@+id/rangebar"
                            android:layout_alignStart="@+id/rangebar"
                            android:layout_centerVertical="true"
                            android:text="12:00 AM" />


                        <TextView
                            android:id="@+id/tv_right"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignLeft="@+id/rangebar"
                            android:layout_alignStart="@+id/rangebar"
                            android:layout_centerVertical="true"
                            android:gravity="end"
                            android:text="11:59 PM" />

                    </LinearLayout>

                    <com.appyvet.rangebar.RangeBar
                        android:id="@+id/rangebar"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_alignTop="@+id/textView5"
                        app:tickEnd="25"
                        app:tickInterval="1"
                        app:tickStart="1" />


                </LinearLayout>

            </android.support.v7.widget.CardView>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:orientation="horizontal">

                <mehdi.sakout.fancybuttons.FancyButton
                    android:id="@+id/btn_reset"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_margin="@dimen/sub_margin"
                    android:layout_weight="1"
                    android:padding="@dimen/sub_margin"
                    android:text="@string/reset_filter"
                    android:textColor="@android:color/white"
                    fancy:fb_defaultColor="@color/colorPrimary"
                    fancy:fb_focusColor="@color/colorPrimaryBlueDark" />


                <mehdi.sakout.fancybuttons.FancyButton
                    android:id="@+id/btn_show"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_margin="@dimen/sub_margin"
                    android:layout_weight="1"
                    android:padding="@dimen/sub_margin"
                    android:text="@string/show_result"
                    android:textColor="@android:color/white"
                    fancy:fb_defaultColor="@color/colorPrimary"
                    fancy:fb_focusColor="@color/colorPrimaryBlueDark" />

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</RelativeLayout>
