<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cv_itemForTally"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/mini_margin">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_marginLeft="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Primary diagnosis: "
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/text_small"
                android:textStyle="bold" />

            <TextView
                android:layout_marginLeft="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="@dimen/sub_margin"
                android:text="Test"
                android:textColor="@color/colorPrimary"
                android:textStyle="bold"
                android:textSize="15sp" />

            <TextView
                android:layout_marginLeft="8dp"
                android:id="@+id/tv_testName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/tv_name"
                android:layout_marginBottom="@dimen/sub_margin"
                android:layout_marginTop="@dimen/sub_margin"
                android:text="Sample"
                android:textColor="@color/BLACK"
                android:textSize="@dimen/text_mini" />
        </GridLayout>

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_diagnosisName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="Sample"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/text_small"
                android:textStyle="bold" />
        </GridLayout>
    </LinearLayout>


</android.support.v7.widget.CardView>
