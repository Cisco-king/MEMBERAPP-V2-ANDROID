<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fancy="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_sort"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/l_gray_bg"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="v2.SortHospitalActivity"
    tools:showIn="@layout/activity_sort">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="50dp">


            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/sub_margin">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/sub_margin"
                    android:orientation="vertical">

                    <EditText
                        android:imeOptions="actionDone"
                        android:maxLines="1"
                        android:inputType="text"
                        android:id="@+id/et_search"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/edit_text_rounded_corner"
                        android:hint="Find by Hospital Name"
                        android:padding="@dimen/sub_margin"
                        android:textColor="@color/BLACK"
                        android:textSize="@dimen/text_main" />


                </LinearLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:background="@android:color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/sub_margin">

                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/sub_margin"
                    android:orientation="vertical">


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/sub_margin"
                        android:text="@string/sort_by"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/text_main" />

                    <TextView

                        android:textColor="@color/BLACK"
                        android:id="@+id/tv_sort_by"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/edit_text_rounded_corner"
                        android:padding="@dimen/sub_margin"
                        android:text="@string/sample"
                        android:textSize="@dimen/text_main" />


                </LinearLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/sub_margin">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/sub_margin"
                    android:orientation="vertical">

                    <CheckBox
                        android:id="@+id/cb_med_clinic"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentTop="true"
                        android:gravity="end" />

                    <TextView
                        android:id="@+id/textView4"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:gravity="center_vertical"
                        android:text="@string/medicard_clinic"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/text_main" />
                </RelativeLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/sub_margin">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/sub_margin"
                    android:orientation="vertical">


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/sub_margin"
                        android:text="@string/province"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/text_main" />

                    <TextView
                        android:textColor="@color/BLACK"
                        android:id="@+id/tv_province"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/edit_text_rounded_corner"
                        android:padding="@dimen/sub_margin"
                        android:text="All Provinces"
                        android:textSize="@dimen/text_main" />


                </LinearLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/sub_margin">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/sub_margin"
                    android:orientation="vertical">


                    <TextView
                        android:textColor="@color/colorPrimary"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/sub_margin"
                        android:text="@string/city"
                        android:textSize="@dimen/text_main" />

                    <TextView
                        android:textColor="@color/BLACK"
                        android:id="@+id/tv_city"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/edit_text_rounded_corner"
                        android:padding="@dimen/sub_margin"
                        android:text="All Cities"

                        android:textSize="@dimen/text_main" />


                </LinearLayout>

            </android.support.v7.widget.CardView>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:orientation="horizontal">

                <mehdi.sakout.fancybuttons.FancyButton
                    android:id="@+id/btn_reset"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_margin="@dimen/sub_margin"
                    android:layout_weight="1"
                    android:padding="@dimen/sub_margin"
                    android:text="@string/reset_filter"
                    android:textColor="@android:color/white"
                    fancy:fb_defaultColor="@color/colorPrimaryLight"
                    fancy:fb_focusColor="@color/colorPrimaryDark" />


                <mehdi.sakout.fancybuttons.FancyButton
                    android:id="@+id/btn_show"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_margin="@dimen/sub_margin"
                    android:layout_weight="1"
                    android:padding="@dimen/sub_margin"
                    android:text="@string/show_result"
                    android:textColor="@android:color/white"
                    fancy:fb_defaultColor="@color/colorPrimaryLight"
                    fancy:fb_focusColor="@color/colorPrimaryDark" />

            </LinearLayout>
        </LinearLayout>
    </ScrollView>



</RelativeLayout>
