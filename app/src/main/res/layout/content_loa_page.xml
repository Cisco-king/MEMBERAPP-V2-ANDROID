                            android:textColor="@color/BLACK" />


                    </LinearLayout>


                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/sub_margin">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/sub_margin"
                        android:gravity="center"
                        android:orientation="vertical">


                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="@string/this_req_is_valid_from"
                            android:textSize="@dimen/text_small"
                            android:visibility="gone" />


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">


                            <mehdi.sakout.fancybuttons.FancyButton
                                android:id="@+id/btn_cancel_req"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="@dimen/sub_margin"
                                android:layout_weight="1"
                                fancy:fb_defaultColor="@color/colorPrimary"
                                fancy:fb_focusColor="@color/colorPrimaryBlueDark"
                                fancy:fb_text="Cancel Request" />

                            <mehdi.sakout.fancybuttons.FancyButton
                                android:id="@+id/btn_cancel"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="@dimen/sub_margin"
                                android:layout_weight="1"
                                fancy:fb_defaultColor="@color/colorPrimary"
                                fancy:fb_focusColor="@color/colorPrimaryBlueDark"
                                fancy:fb_text="Go Back" />
                        </LinearLayout>


                        <mehdi.sakout.fancybuttons.FancyButton
                            android:id="@+id/btn_download"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/sub_margin"
                            android:layout_weight="1"
                            fancy:fb_defaultColor="@color/colorPrimary"
                            fancy:fb_focusColor="@color/colorPrimaryBlueDark"
                            fancy:fb_text="@string/download_loa" />


