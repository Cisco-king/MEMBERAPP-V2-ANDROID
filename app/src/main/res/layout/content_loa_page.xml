                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/sub_margin"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/textView8"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/sub_margin"
                            android:gravity="center"
                            android:text="@string/this_approval_shall" />

                        <ImageView
                            android:id="@+id/ivQrApprovalNumber"
                            android:layout_width="200dp"
                            android:layout_height="200dp"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginBottom="@dimen/margin"
                            android:layout_marginTop="@dimen/margin" />

                        <TextView
                            android:id="@+id/tvReferenceNumber"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginBottom="5dp"
                            android:text="Reference Number : xxxxx"
                            android:textColor="@color/colorPrimaryLight"
                            android:textSize="@dimen/text_small" />

                        <TextView
                            android:id="@+id/tvServiceType"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginBottom="@dimen/margin"
                            android:text="@string/maternity_consulation"
                            android:textColor="@color/colorPrimaryLight"
                            android:textSize="@dimen/text_small" />

                        <TextView
