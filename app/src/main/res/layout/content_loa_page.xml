                            android:textSize="@dimen/text_small" />


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/sub_margin"
                            android:orientation="horizontal"
                            android:visibility="gone">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Reference No.: "
                                android:textColor="@color/colorPrimaryLight"
                                android:textSize="@dimen/text_small" />


                            <TextView
                                android:id="@+id/tv_approval_code"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="end"
                                android:text="@string/hospital_clinic"
                                android:textColor="@color/BLACK"
                                android:textSize="@dimen/text_small" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/sub_margin"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/member_code_"
                                android:textColor="@color/colorPrimaryLight"
                                android:textSize="@dimen/text_small" />


                            <TextView
                                android:id="@+id/tv_member_code"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"

                                android:gravity="end"
                                android:text="@string/hospital_clinic"
                                android:textColor="@color/BLACK"
                                android:textSize="@dimen/text_small" />

                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/sub_margin"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/member_name_"
                                android:textColor="@color/colorPrimaryLight"
                                android:textSize="@dimen/text_small" />


                            <TextView
                                android:id="@+id/tv_member_name"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="end"
                                android:text="@string/hospital_clinic"
                                android:textColor="@color/BLACK"
                                android:textSize="@dimen/text_small" />

                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/sub_margin"
                            android:orientation="horizontal">

                            <TextView

                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/age_"
                                android:textColor="@color/colorPrimaryLight"
                                android:textSize="@dimen/text_small" />


                            <TextView
                                android:id="@+id/tv_age"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="end"
                                android:text="@string/hospital_clinic"
                                android:textColor="@color/BLACK"
                                android:textSize="@dimen/text_small" />
                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/sub_margin"
                            android:orientation="horizontal">

                            <TextView

                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/gender_"
                                android:textColor="@color/colorPrimaryLight"
                                android:textSize="@dimen/text_small" />


                            <TextView
                                android:id="@+id/tv_gender"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"

                                android:gravity="end"
                                android:text="@string/hospital_clinic"
                                android:textColor="@color/BLACK"
                                android:textSize="@dimen/text_small" />
                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/sub_margin"
                            android:orientation="horizontal">

                            <TextView

                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/company_name_"
                                android:textColor="@color/colorPrimaryLight"
                                android:textSize="@dimen/text_small" />

                            <TextView
                                android:id="@+id/tv_company"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="end"
                                android:text="@string/hospital_clinic"
                                android:textColor="@color/BLACK"
                                android:textSize="@dimen/text_small" />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/llValidityDate"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/sub_margin"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/validity_date_"
                                android:textColor="@color/colorPrimaryLight"
                                android:textSize="@dimen/text_small" />

                            <TextView
                                android:id="@+id/tvValidityDate"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="end"
                                android:text="MM/dd/yyyy"
                                android:textColor="@color/BLACK"
                                android:textSize="@dimen/text_small" />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/llEffectiveDate"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/sub_margin"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/effective_Date_"
                                android:textColor="@color/colorPrimaryLight"
                                android:textSize="@dimen/text_small" />

                            <TextView
                                android:id="@+id/tvEffectiveDate"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="end"
                                android:text="MM/dd/yyyy"
                                android:textColor="@color/BLACK"
                                android:textSize="@dimen/text_small" />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/llDateApproved"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/sub_margin"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/date_requested"
                                android:textColor="@color/colorPrimaryLight"
                                android:textSize="@dimen/text_small" />

                            <TextView
                                android:id="@+id/tvDateApproved"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="end"
                                android:text="MM/dd/yyyy"
                                android:textColor="@color/BLACK"
                                android:textSize="@dimen/text_small" />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/llRemarks"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/sub_margin"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/remarks_"
                                android:textColor="@color/colorPrimaryLight"
                                android:textSize="@dimen/text_small" />

                            <TextView
                                android:id="@+id/tvRemarks"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="end"
                                android:text=""
                                android:textColor="@color/BLACK"
                                android:textSize="@dimen/text_small" />

                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/sub_margin"
                            android:orientation="horizontal"
                            android:visibility="gone">

                            <TextView

                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Date Requested: "
                                android:textColor="@color/colorPrimaryLight"
                                android:textSize="@dimen/text_small" />

                            <TextView
                                android:id="@+id/tv_date_approved"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="end"
                                android:text="@string/hospital_clinic"
                                android:textColor="@color/BLACK"
                                android:textSize="@dimen/text_small" />

                        </LinearLayout>


                    </LinearLayout>


                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:id="@+id/cvHospitalClinic"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/sub_margin">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/sub_margin"
                        android:orientation="vertical">


                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Hospital/Clinic"
                            android:textColor="@color/colorPrimary"
                            android:textSize="@dimen/text_small" />

                        <!-- EMPIRE MEDICINE EXCELLENT HEALTH SERVICES AND DIAGNOSTIC CENTER -->
                        <TextView
                            android:id="@+id/tvHospitalClinicName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/sub_margin"
                            android:textAppearance="@style/TextAppearance.AppCompat.Title"
                            android:textColor="@color/BLACK" />

                        <!-- Abangan Sur, McArthur Highway Hi-way -->
                        <TextView
                            android:id="@+id/tvHopitalClinicLocation"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textAppearance="@style/TextAppearance.AppCompat.Subhead" />


                        <!-- (044) 248-3353 / xxxxxxxxx / xxxxxxxxxy -->
                        <TextView
                            android:id="@+id/tvHopitalClinicContacts"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/sub_margin"
                            android:text=""
                            android:textAppearance="@style/TextAppearance.AppCompat.Subhead" />

                        <!-- Ms. Tony Gonzaga -->
                        <TextView
                            android:id="@+id/tvHopitalClinicDoctorName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/sub_margin"
                            android:text=""
                            android:textAppearance="@style/TextAppearance.AppCompat.Subhead" />


                    </LinearLayout>


                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:id="@+id/cvDoctorDetails"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/sub_margin">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/sub_margin"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/doctor"
                            android:textColor="@color/colorPrimary"
                            android:textSize="@dimen/text_small" />

                        <TextView
                            android:id="@+id/tvDoctorName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/sub_margin"
                            android:text=""
                            android:textAppearance="@style/TextAppearance.AppCompat.Title"
                            android:textColor="@color/BLACK" />


                        <TextView
                            android:id="@+id/tvDoctorInfo"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                            android:textColor="@color/BLACK" />

                    </LinearLayout>


                </android.support.v7.widget.CardView>


                <!-- START UNUSED GONE VISIBILITY -->
                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/sub_margin"
                    android:visibility="gone">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/sub_margin"
                        android:orientation="vertical">


                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/requesting_doctor"
                            android:textColor="@color/colorPrimary"
                            android:textSize="@dimen/text_small" />

                        <TextView
                            android:id="@+id/tv_doc_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/sub_margin"
                            android:text="@string/requesting_doctor"
                            android:textColor="@color/BLACK" />


                        <TextView
                            android:id="@+id/tv_spec"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/requesting_doctor"
                            android:textColor="@color/BLACK" />

                    </LinearLayout>


                </android.support.v7.widget.CardView>
                <!-- END UNUSED GONE VISIBILITY -->

                <!-- START UNUSED GONE VISIBILITY -->
                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/sub_margin"
                    android:visibility="gone">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/sub_margin"
                        android:orientation="vertical">


                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Diagnosis"
                            android:textColor="@color/colorPrimary"
                            android:textSize="@dimen/text_small" />

                        <TextView
                            android:id="@+id/tv_diagnosis"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/sub_margin"
                            android:text="@string/requesting_doctor"
                            android:textColor="@color/BLACK" />


                    </LinearLayout>


                </android.support.v7.widget.CardView>
                <!-- END UNUSED GONE VISIBILITY -->

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/sub_margin"
                    android:visibility="gone">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/sub_margin"
                        android:orientation="vertical">


                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/hospital_clinic"
                            android:textColor="@color/colorPrimary"
                            android:textSize="@dimen/text_small" />

                        <TextView
                            android:id="@+id/tv_hospname"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/sub_margin"
                            android:text="@string/requesting_doctor"
                            android:textColor="@color/BLACK" />


                    </LinearLayout>


                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/sub_margin"
                    android:visibility="gone">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/sub_margin"
                        android:orientation="vertical">


                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/procedure"
                            android:textColor="@color/colorPrimary"
                            android:textSize="@dimen/text_small" />

                        <TextView
                            android:id="@+id/tv_procedure"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/sub_margin"
                            android:text="@string/requesting_doctor"
                            android:textColor="@color/BLACK" />


                    </LinearLayout>


                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/sub_margin">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/sub_margin"
                        android:orientation="vertical">


                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/reason_for_consult"
                            android:textColor="@color/colorPrimary"
                            android:textSize="@dimen/text_small" />

                        <TextView
                            android:id="@+id/tv_problem"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/sub_margin"
