<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/l_gray_bg"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="v2.DetailsActivity"
    tools:showIn="@layout/activity_details">


    <LinearLayout
        android:id="@+id/content_details"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/sub_margin"
        android:orientation="vertical"
        android:paddingBottom="@dimen/margin">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/sub_margin"
            android:gravity="center"
            android:text="@string/req_details"
            android:textColor="@color/BLACK"
            android:textSize="@dimen/text_main" />

        <android.support.v7.widget.CardView
            android:id="@+id/cv_hosp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/textView2">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_below="@+id/textView2"
                        android:layout_margin="@dimen/sub_margin"
                        android:layout_weight="1"
                        android:text="@string/hospital_clinic_"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/text_small" />


                    <TextView
                        android:id="@+id/tv_hospName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_below="@+id/textView2"
                        android:layout_marginLeft="@dimen/sub_margin"
                        android:text="@string/hospital_clinic"
                        android:textColor="@color/BLACK"
                        android:textSize="@dimen/text_small" />

                    <TextView
                        android:id="@+id/tv_hospAddress"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_below="@+id/textView2"
                        android:layout_marginBottom="@dimen/sub_margin"
                        android:layout_marginLeft="@dimen/sub_margin"
                        android:text="@string/hospital_clinic"
                        android:textColor="@color/BLACK"
                        android:textSize="@dimen/text_mini" />


                    <TextView
                        android:id="@+id/tv_contact"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/sub_margin"
                        android:layout_marginLeft="@dimen/sub_margin"
                        android:text="@string/hospital_clinic"
                        android:textColor="@color/BLACK"
                        android:textSize="@dimen/text_mini" />

                    <TextView
                        android:id="@+id/tv_contact_person"

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/sub_margin"
                        android:layout_marginLeft="@dimen/sub_margin"
                        android:text="@string/hospital_clinic"
                        android:textColor="@color/BLACK"
                        android:textSize="@dimen/text_mini" />

                    <TextView
                        android:id="@+id/tv_sched"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/sub_margin"
                        android:layout_marginLeft="@dimen/sub_margin"
                        android:text="@string/hospital_clinic"
                        android:textColor="@color/BLACK"
                        android:textSize="@dimen/text_mini"
                        android:visibility="gone" />
                </LinearLayout>

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:src="@drawable/ic_keyboard_arrow_right" />

            </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/cv_doctor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/cv_hosp"
            android:layout_marginTop="16dp">

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:focusableInTouchMode="true"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true"
                            android:layout_below="@+id/textView2"
                            android:layout_margin="@dimen/sub_margin"
                            android:layout_weight="1"
                            android:text="@string/doctor_"
                            android:textColor="@color/colorPrimary"
                            android:textSize="@dimen/text_small" />


                        <TextView
                            android:id="@+id/tv_select_doc"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true"
                            android:layout_below="@+id/textView2"
                            android:layout_margin="@dimen/sub_margin"
                            android:layout_weight="1"
                            android:gravity="end"
                            android:text="Select Doctor >"
                            android:textColor="@color/colorPrimary"
                            android:textSize="@dimen/text_small" />


                    </LinearLayout>


                    <LinearLayout
                        android:id="@+id/ll_doctor_not_found"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_doc_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true"
                            android:layout_below="@+id/textView2"
                            android:layout_marginLeft="@dimen/sub_margin"
                            android:text="@string/hospital_clinic"
                            android:textColor="@color/BLACK"
                            android:textSize="@dimen/text_small" />

                        <TextView
                            android:id="@+id/tv_doc_det"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true"
                            android:layout_below="@+id/textView2"
                            android:layout_marginBottom="@dimen/sub_margin"
                            android:layout_marginLeft="@dimen/sub_margin"
                            android:text="@string/hospital_clinic"
                            android:textColor="@color/BLACK"
                            android:textSize="@dimen/text_mini" />

                        <TextView
                            android:id="@+id/tv_spec"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/sub_margin"
                            android:layout_marginLeft="@dimen/sub_margin"

                            android:text="@string/hospital_clinic"
                            android:textColor="@color/BLACK"
                            android:textSize="@dimen/text_mini" />

                        <TextView
                            android:id="@+id/tv_sched_doctor"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/sub_margin"
                            android:layout_marginLeft="@dimen/sub_margin"

                            android:text="@string/hospital_clinic"
                            android:textColor="@color/BLACK"
                            android:textSize="@dimen/text_mini" />


                    </LinearLayout>


                    <EditText
                        android:imeOptions="actionDone"
                        android:maxLines="1"
                        android:inputType="text"
                        android:id="@+id/et_doctor"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/sub_margin"
                        android:background="@drawable/button_with_border_light_color"
                        android:hint="@string/hint_doctor"
                        android:padding="@dimen/sub_margin"
                        android:textSize="@dimen/text_small" />


                    <TextView
                        android:id="@+id/tv_no_doctor"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/sub_margin"
                        android:gravity="center"
                        android:text="@string/no_doctor_set"
                        android:textColor="@color/colorPrimaryLight"
                        android:textSize="@dimen/text_main" />


                </LinearLayout>

                <ImageView
                    android:id="@+id/img_arrow"
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:src="@drawable/ic_keyboard_arrow_right" />

            </LinearLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/cardView2"
            android:layout_marginTop="@dimen/sub_margin">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/textView2"
                    android:layout_margin="@dimen/sub_margin"
                    android:text="@string/prob_cond_"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/text_small" />


                <EditText
                    android:id="@+id/et_input_diagnosis"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/sub_margin"
                    android:layout_weight="1"
                    android:background="@drawable/button_with_border_light_color"
                    android:gravity="left"
                    android:hint="@string/hint_condition"
                    android:imeOptions="actionDone"
                    android:inputType="textMultiLine"
                    android:isScrollContainer="false"
                    android:maxLength="250"
                    android:minHeight="100dp"
                    android:padding="10dp"
                    android:singleLine="true"
                    android:textSize="@dimen/text_small" />


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/this_req_is_valid_from"
                    android:textSize="@dimen/text_small" />

                <TextView
                    android:id="@+id/tv_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin"
                    android:layout_marginRight="@dimen/margin"
                    android:gravity="center"
                    android:text="@string/this_req_is_valid_from"
                    android:textSize="@dimen/text_small" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <CheckBox
                        android:id="@+id/cb_confirm"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/sub_margin"
                        android:gravity="center"
                        android:text="@string/i_confirm_that" />

                    <TextView
                        android:id="@+id/tv_terms_n_cond"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text=" Terms and Conditions"
                        android:textColor="@color/colorPrimary" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/margin"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/btn_submit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/sub_margin"
                        android:background="@color/colorPrimaryLight"
                        android:text="@string/submit"
                        android:textColor="@android:color/white" />

                    <Button

                        android:id="@+id/btn_cancel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/sub_margin"
                        android:background="@drawable/button_with_border_light_color"
                        android:text="@string/cancel"
                        android:textColor="@color/colorPrimaryLight" />


                </LinearLayout>

            </LinearLayout>
        </android.support.v7.widget.CardView>


    </LinearLayout>

</ScrollView>