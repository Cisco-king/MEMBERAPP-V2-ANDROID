<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fancy="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="android.medicard.com.medicard.TermsActivity">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">




        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:contentInsetLeft="0dp"
            app:contentInsetStart="0dp"
            app:popupTheme="@style/AppTheme.PopupOverlay">

            <mehdi.sakout.fancybuttons.FancyButton

                android:id="@+id/btn_back"
                android:layout_width="@dimen/btn_back_width"
                android:layout_height="match_parent"
                android:gravity="center"
                fancy:fb_defaultColor="@color/transparent"
                fancy:fb_focusColor="@color/colorPrimaryBlueDark"

                fancy:fb_iconResource="@drawable/ic_action_arrow_left"
                fancy:fb_text="" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/btn_back_width"
                android:layout_weight="1"
                android:text="@string/title_activity_terms"
                android:textAlignment="center"
                android:textColor="@android:color/white"
                android:textSize="@dimen/text_main" />


            <ImageButton

                android:id="@+id/btn_next"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="?attr/selectableItemBackgroundBorderless" />

            </android.support.v7.widget.Toolbar>

    </android.support.design.widget.AppBarLayout>

    <include layout="@layout/content_terms" />



</android.support.design.widget.CoordinatorLayout>
